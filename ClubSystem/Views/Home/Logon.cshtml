@{
    Layout = "";
}
<!doctype html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>登录</title>
    <link rel="stylesheet" type="text/css" href="../../Content/styles.css">
</head>
<html lang="zh">
<body>
    <div class="htmleaf-container">
        <div class="wrapper">
            <div class="container">
                <h1>Welcome</h1>

                <form class="form">
                    <input type="text" placeholder="用户代码" value="superadmin" id="doc-ipt-tel">
                    <input type="password" placeholder="密码" value="123456" id="doc-ipt-pwd">
                    <button type="submit" id="login-button">登录</button>
                </form>
            </div>
        </div>
    </div>

    <script src="../../Scripts/jquery-2.1.1.min.js" type="text/javascript"></script>
    <script>
        $('#login-button').click(function (event) {
            event.preventDefault();
            $('form').fadeOut(500);
            $('.wrapper').addClass('form-success');
            $.ajax({
                type: "post",
                contentType: "application/json;utf-8",
                dataType: "text",
                url: "/Home/LogOn",
                data: "{ handno : \"" + $("#doc-ipt-tel").val() + "\"," +
                                    " pwd:\"" + $("#doc-ipt-pwd").val() + "\"}",
                success: function (result) {
                    if (result == "success") {
                        window.location.href = "/Home/Index";
                    }
                    else { alert("登录失败:" + result); }
                },
                error: function (statusText, responseText)   //  参数： statusText, responseText
                {
                    alert("服务器连接有误！" + responseText);
                }
            });
        });
    </script>

    <div style="text-align:center;margin:50px 0; font:normal 14px/24px 'MicroSoft YaHei';color:#000000">
        <h1>学生社团管理系统</h1>
    </div>
</body>
</html>