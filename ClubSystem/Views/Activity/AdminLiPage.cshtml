@using ClubSystem.Models;
@{
    ViewBag.Title = "AdminLiPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    $(function () {
        $("#btnReturn").click(function () {
            history.go(-1);
        });
        $('#PassClub').click(function () {
            $.post("/Activity/PassActivity/?clubid=" + $('#clubid').val(),
                                                 function (result) {
                                                     if (result.IsSucceed) {

                                                         alert("提交成功！");
                                                         window.location.href = "/Activity/AdminAcList";
                                                     }
                                                     else {
                                                         alert("服务器连接有误！！");
                                                     }

                                                 });
        });
        $('#NPassClub').click(function () {
            var str = prompt("审核未通过原因");
            $.post("/Activity/NPassActivity/?clubid=" + $('#clubid').val()+ "&str="+str,
                                                 function (result) {
                                                     if (result.IsSucceed) {
                                                         alert("提交成功！");
                                                         window.location.href = "/Activity/AdminAcList";
                                                     }
                                                     else {
                                                         alert("服务器连接有误！！");
                                                     }

                                                 });
        });
    });

</script>
@using (Html.BeginForm("AdminLiPage", "Activity", FormMethod.Post))
{
    <div class="am-g">
                    <div class="am-u-sm-12 am-u-md-6">
                        <div class="am-btn-toolbar">
                            <div class="am-btn-group am-btn-group-xs">
                                <button id="btnReturn" type="button" class="am-btn am-btn-default am-btn-success"><span class="am-icon-arrow-left"></span> 返回</button>
                            </div>
                        </div>
                    </div>
                </div>
<!--搜索栏start-->
<div class="portlet-title">
    <div class="tpl-portlet-input tpl-fz-ml">
        <div class="portlet-input input-small input-inline">
            <div class="input-icon right">
                <i class="am-icon-search"></i>
                <input type="text" class="form-control form-control-solid" placeholder="搜索...">
            </div>
        </div>
    </div>
</div>
<!--搜索栏end-->
<div class="am-form-group">
    <label for="user-name" class="am-u-sm-3 am-form-label">活动主题</label>
    <div class="am-u-sm-9">
        <input style =" display:none;" type="text" id="clubid" value="@(ViewData["acid"])">
            <input disabled="disabled" type="text" id="clubtittle" value="@(ViewData["actittle"])">
            <small></small>
</div>
</div>
    <div class="am-form-group">
    <label for="user-phone" class="am-u-sm-3 am-form-label">社团名称</label>
    <div class="am-u-sm-9">
        <input disabled="disabled" type="text" id="acclub" value="@(ViewData["acclub"])">
    </div>
</div>
<div class="am-form-group">
    <label for="user-phone" class="am-u-sm-3 am-form-label">活动时间</label>
    <div class="am-u-sm-9">
        <input disabled="disabled" type="text" id="clubtime" value="@(ViewData["clubtime"])">
    </div>
</div>
<div class="am-form-group">
    <label for="user-phone" class="am-u-sm-3 am-form-label">活动地点</label>
    <div class="am-u-sm-9">
        <input disabled="disabled" type="text" id="clubplace" value="@(ViewData["clubplace"])">
    </div>
</div>
    <div class="am-form-group">
    <label for="user-phone" class="am-u-sm-3 am-form-label">社团剩余经费</label>
    <div class="am-u-sm-9">
        <input disabled="disabled" type="text" id="lastmoney" value="@(ViewData["lastmoney"])">
    </div>
</div>
<div class="am-form-group">
    <label for="user-phone" class="am-u-sm-3 am-form-label">预计经费</label>
    <div class="am-u-sm-9">
        <input disabled="disabled" type="tel" id="money" value="@(ViewData["money"])">
    </div>
</div>
    <div class="am-form-group">
    <label for="user-phone" class="am-u-sm-3 am-form-label">申请时间</label>
    <div class="am-u-sm-9">
        <input disabled="disabled" type="tel" id="sarttime" value="@(ViewData["sarttime"])">
    </div>
</div>
<div class="am-form-group">
    <label for="user-intro" class="am-u-sm-3 am-form-label">活动内容</label>
    <div class="am-u-sm-9">
        <textarea disabled="disabled" class="" rows="5" id="clubform">@(ViewData["clubform"])</textarea>
    </div>
</div>
    <div class="am-form-group">
    <div class="am-u-sm-9 am-u-sm-push-3">
        <button id="PassClub" type="button" class="am-btn am-btn-primary">通过</button>
        <button style="float:right" id="NPassClub" type="button" class="am-btn am-btn-primary">不通过</button>
    </div>
</div>
}

