
@{
    ViewBag.Title = "ApplyActivity";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    $(function () {
        $("#btnSave").click(function () {
            if ($("#clubtittle").val() == "") {
                alert("请填写活动主题！");
                return;
            }
            if ($("#clubtime").val() == "") {
                alert("请填写活动时间！");
                return;
            }
            if ($("#clubplace").val() == "") {
                alert("请填写活动地点！");
                return;
            }
            if ($("#cluboption1").val() == "") {
                alert("请填写活动预计经费！");
                return;
            }
            if ($("#clubform").val() == "") {
                alert("请填写活动内容！");
                return;
            }
            if (!confirm("您确认要提交吗？")) {
                return;
            }
            var article = GetArticle();
            $.ajax({
                type: "POST",
                contentType: "application/json;utf-8",
                url: "/Activity/SaveActivity",
                data: "{json:'" + $.toJSON(article) + "'}",
                dataType: "",
                success: function (data, textStatus) {
                    if (data == "success") {
                        alert("保存成功！");
                        //location.reload();
                    }
                    else {
                        alert("保存失败！");
                    }
                },
                complete: function (XMLHttpRequest, textStatus) {
                    //HideLoading();
                },
                error: function (statusText, responseText) {
                    //请求出错处理
                    alert(statusText.responseText);
                }
            });
        });
    });

    // 获取所有信息
    function GetArticle() {
        var article = new Object();
        article.clubtittle = $("#clubtittle").val();
        article.clubtime = $("#clubtime").val();
        article.clubplace = $("#clubplace").val();
        article.cluboption1 = $("#cluboption1").val();
        article.clubform = $("#clubform").val();
        return article;
    }
</script>
<div class="caption font-green bold"> 请填写申请资料！(๑′ᴗ‵๑)❤</div>
<!--搜索栏start-->
<div class="portlet-title">
    <div class="tpl-portlet-input tpl-fz-ml">
        <div class="portlet-input input-small input-inline">
